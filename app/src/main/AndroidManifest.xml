<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wega.materialdesignwidget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToolbarActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".NestedScrollViewActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".TabLayoutActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".CoordinatorLayoutActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".AppBarLayoutActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".AppBarLayout.ScrollActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".AppBarLayout.ExitUntilCollapsedActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".AppBarLayout.EnterAlwaysCollapsedActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".AppBarLayout.EnterAlwaysActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
            android:name=".AppBarLayout.SpanActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
    </application>

</manifest>